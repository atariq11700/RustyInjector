{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo build",
			"dependsOn" : "rust: cargo fmt"
		},
		{
			"type": "cargo",
			"command": "fmt",
			"label":"rust: cargo fmt"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],		
			"label" :"rust: cargo run",
			"dependsOn":"rust: cargo fmt",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}